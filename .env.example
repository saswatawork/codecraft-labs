# CodeCraft Labs - Root Environment Variables Template
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/codecraft_labs"
DATABASE_URL_UNPOOLED="postgresql://user:password@localhost:5432/codecraft_labs"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Authentication (if using NextAuth or similar)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here" # Generate with: openssl rand -base64 32

# OAuth Providers (optional)
GITHUB_ID=""
GITHUB_SECRET=""
GOOGLE_ID=""
GOOGLE_CLIENT_SECRET=""

# Email (if using email notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@yourdomain.com"

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=""
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_ERROR_REPORTING="false"

# Deployment
NODE_ENV="development"
VERCEL_ENV="development"

# API Keys
OPENAI_API_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Monitoring & Error Tracking
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Content/CMS
CONTENTFUL_SPACE_ID=""
CONTENTFUL_ACCESS_TOKEN=""
CONTENTFUL_PREVIEW_TOKEN=""
