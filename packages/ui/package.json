{
  "name": "@ccl/ui",
  "version": "1.0.0",
  "description": "CodeCraft Labs UI Component Library - Enterprise-grade React components with TypeScript",
  "author": "Saswata Pal <saswata.career@gmail.com>",
  "license": "MIT",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": ["dist/**"],
  "sideEffects": ["**/*.css"],
  "scripts": {
    "build": "vite build && tsc --project tsconfig.build.json --emitDeclarationOnly",
    "dev": "storybook dev -p 6006",
    "lint": "biome check src/",
    "format": "biome format --write src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rm -rf dist .turbo node_modules/.cache storybook-static coverage"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "tailwind-merge": "^2.1.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@ccl/typescript-config": "workspace:*",
    "@storybook/addon-links": "^10.0.6",
    "@storybook/addon-docs": "^10.0.6",
    "@storybook/react": "^10.0.6",
    "@storybook/react-vite": "^10.0.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^4.0.8",
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.32",
    "react": "19.0.0-rc.1",
    "react-dom": "19.0.0-rc.1",
    "storybook": "^10.0.6",
    "tailwindcss": "^4.0.0",
    "terser": "^5.44.1",
    "typescript": "^5.6.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "typescript",
    "tailwind",
    "radix-ui",
    "storybook"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saswatawork/codecraft-labs.git",
    "directory": "packages/ui"
  },
  "publishConfig": {
    "access": "public"
  }
}
